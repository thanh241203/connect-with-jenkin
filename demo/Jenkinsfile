pipeline {
    agent any

    tools {
        maven 'MAVEN_HOME'
        jdk 'JDK17'
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'ğŸ“¦ Cloning GitHub repository...'
                git branch: 'master', url: 'https://github.com/thanh241203/connect-with-jenkin.git'
            }
        }

        stage('Build') {
            steps {
                echo 'ğŸ”¨ Building the project...'
                dir('demo'){
                    bat 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('demo') {
                    bat 'docker build -t demo-app:latest .'
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                bat '''
                docker stop demo-app || true
                docker rm demo-app || true
                docker run -d -p 8080:8080 --name demo-app demo-app:latest
                '''
            }
        }
    }

    post {
        success {
            echo 'âœ… Build & Run successful!'
        }
        failure {
            echo 'âŒ Build failed!'
        }
    }
}
