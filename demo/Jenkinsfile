pipeline {
    agent any

    environment {
        DOCKERHUB_USER = 'thanhkon241203265'
        DOCKERHUB_PASS = credentials('dockerhub-credentials')  // l∆∞u tr√™n Jenkins
        IMAGE_NAME = 'thanhkon241203265/ks-jenkin'
        K8S_CONFIG_CREDENTIALS_ID = 'my-kubeconfig' // Thay b·∫±ng ID credentials K8s
        K8S_NAMESPACE = 'default' // Thay b·∫±ng namespace c·ªßa b·∫°n
        K8S_DEPLOYMENT_NAME = 'springboot-app'
    }
    tools {
        maven 'MAVEN_HOME'
        jdk 'JDK17'
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'üì¶ Cloning GitHub repository...'
                git branch: 'master', url: 'https://github.com/thanh241203/connect-with-jenkin.git'
            }
        }

        stage('Build') {
            steps {
                echo 'üî® Building the project...'
                dir('demo') {
                    bat 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('demo') {
                    script {
                        def imageTag = "v${env.BUILD_NUMBER}"
                        bat "docker build -t ${IMAGE_NAME}:${imageTag} ."
                        bat "docker tag ${IMAGE_NAME}:${imageTag} ${IMAGE_NAME}:latest"
                    }
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    script {
                        def imageTag = "v${env.BUILD_NUMBER}"
                        bat """
                    echo Logging in to DockerHub...
                    echo %DOCKER_PASS% | docker login -u %DOCKER_USER% --password-stdin
                    docker push ${IMAGE_NAME}:${imageTag}
                    docker push ${IMAGE_NAME}:latest
                """
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                echo 'üöÄ Deploying new image to Kubernetes...'
                withCredentials([file(credentialsId: env.K8S_CONFIG_CREDENTIALS_ID, variable: 'KUBECONFIG_FILE')]) {
                    script {
                        def imageTag = "v${env.BUILD_NUMBER}"
                        def fullImage = "${env.IMAGE_NAME}:${imageTag}"

                        env.KUBECONFIG = KUBECONFIG_FILE


                        bat "kubectl set image deployment/${env.K8S_DEPLOYMENT_NAME} app-container-name=${fullImage} -n ${env.K8S_NAMESPACE}"


                        bat "kubectl rollout status deployment/${env.K8S_DEPLOYMENT_NAME} -n ${env.K8S_NAMESPACE}"

                        echo "Deployment ${env.K8S_DEPLOYMENT_NAME} updated with image: ${fullImage}"
                    }
                }
            }

        }

        post {
            success {
                echo '‚úÖ Build & Run successful!'
            }
            failure {
                echo '‚ùå Build failed!'
            }
        }
    }
}