pipeline {
    agent any

    environment {
        DOCKERHUB_USER = 'thanhkon241203265'
        DOCKERHUB_PASS = credentials('dockerhub-credentials')
        IMAGE_NAME = 'thanhkon241203265/ks-jenkin'

        // C·∫•u h√¨nh Kubernetes
        K8S_CONFIG_CREDENTIALS_ID = 'my-kubeconfig' // ID File Credential (kubeconfig)
        K8S_NAMESPACE = 'default'
        K8S_DEPLOYMENT_NAME = 'springboot-app'
    }
    tools {
        maven 'MAVEN_HOME'
        jdk 'JDK17'
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'üì¶ Cloning GitHub repository...'
                git branch: 'master', url: 'https://github.com/thanh241203/connect-with-jenkin.git'
            }
        }

        stage('Build') {
            steps {
                echo 'üî® Building the project...'
                dir('demo') {
                    bat 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('demo') {
                    script {
                        def imageTag = "v${env.BUILD_NUMBER}"
                        bat "docker build -t ${IMAGE_NAME}:${imageTag} ."
                        bat "docker tag ${IMAGE_NAME}:${imageTag} ${IMAGE_NAME}:latest"
                    }
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    script {
                        def imageTag = "v${env.BUILD_NUMBER}"
                        bat """
                    echo Logging in to DockerHub...
                    echo %DOCKER_PASS% | docker login -u %DOCKER_USER% --password-stdin
                    docker push ${IMAGE_NAME}:${imageTag}
                    docker push ${IMAGE_NAME}:latest
                """
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                echo 'üöÄ Deploying new image and ensuring Kubernetes resources are applied...'
                withCredentials([file(credentialsId: env.K8S_CONFIG_CREDENTIALS_ID, variable: 'KUBECONFIG_FILE')]) {
                    script {
                        def imageTag = "v${env.BUILD_NUMBER}"
                        def fullImage = "${env.IMAGE_NAME}:${imageTag}"

                        env.KUBECONFIG = KUBECONFIG_FILE

                        // √Åp d·ª•ng Service v√† Deployment
                        bat "kubectl apply -f ${WORKSPACE}/demo/service.yaml -n ${env.K8S_NAMESPACE}"
                        bat "kubectl apply -f ${WORKSPACE}/demo/deployment.yaml -n ${env.K8S_NAMESPACE}"

                        // C·∫≠p nh·∫≠t Image
                        bat "kubectl set image deployment/${env.K8S_DEPLOYMENT_NAME} springboot=${fullImage} -n ${env.K8S_NAMESPACE}"

                        // Ch·ªù Rollout ho√†n t·∫•t
                        bat "kubectl rollout status deployment/${env.K8S_DEPLOYMENT_NAME} -n ${env.K8S_NAMESPACE}"

                        echo "Deployment ${env.K8S_DEPLOYMENT_NAME} updated with image: ${fullImage}"
                        echo 'üåê Getting service URL...'
                        bat "minikube start --profile minikube"
                        def serviceUrl = bat(returnStdout: true, script: "minikube service springboot-service --url --profile minikube -n ${env.K8S_NAMESPACE}").trim()
                        echo "‚úÖ Service deployed and accessible at: ${serviceUrl}"
                    }
                }
            }
        }
    }
    post {
        success {
            echo '‚úÖ Pipeline finished successfully! Image built and deployed.'
        }
        failure {
            echo '‚ùå Pipeline failed! Check the logs for error details.'
        }
    }
}